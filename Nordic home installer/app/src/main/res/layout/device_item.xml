<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:padding="15dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/node_icon" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/image"

        android:text="Dummy device"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:text="Connect" />

    <Button
        android:id="@+id/identifyButton"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/connectButton"
        android:text="Identify" />

    <Button
        android:id="@+id/provisionButton"
        android:layout_width="51dp"
        android:layout_height="73dp"
        android:layout_toRightOf="@id/identifyButton"
        android:text="Provision" />


    <!--Divider between items in RecyclerView-->
    <!--<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_alignBottom="@id/image"/>-->


</RelativeLayout>

